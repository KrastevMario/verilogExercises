/* 
 * Do not change Module name 
*/
module main;
//111 + 010 = 1001
    reg [2:0] A, B;
    reg Cin;
    wire Cout;
    wire [3:0] S;
    
    rippleAdd ripAdd(A, B, S, Cin);
      initial 
        begin
            A = 3'b111;
            B = 3'b010;
            Cin = 0;
            #5
            $display("Sum = ", S);
            $finish ;
        end
endmodule

module halfAdder(A, B, S, C);
    input A, B;
    output S, C;
    
    xor xorAB(S, A, B);
    and andAB(C, A, B);
endmodule

module fullAdder(A,B,S,Cin, Cout);
    input A,B,Cin;
    output S,Cout;
    wire w1, w2, w3;
    
    halfAdder hfAdd1(A,B,w1,w2);
    halfAdder hfAdd2(Cin, w1, S, w3);
    
    or or1(Cout, w3, w2);
endmodule

module rippleAdd(A, B, S, Cin);
    input [2:0] A, B;
    input Cin;
    output [3:0] S;
    output Cout;
    wire [2:1] C;
    
    fullAdder fullAdd(A[0], B[0], S[0], Cin, C[1]);
    fullAdder fullAdd1(A[1], B[1], S[1], C[1], C[2]);
    fullAdder fullAdd2(A[2], B[2], S[2], C[2], S[3]);
endmodule